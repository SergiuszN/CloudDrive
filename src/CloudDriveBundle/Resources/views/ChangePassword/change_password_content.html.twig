{% trans_default_domain 'FOSUserBundle' %}
<div class="logo-box">
    <div class="name-box">
        <h1 id="name">Cloud Drive</h1>
    </div>
<div class="well register-well">
{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
    {{ form_errors(form) }}

    <div class="input">
        {{ form_label(form.current_password) }}
        {{ form_widget(form.current_password,{'attr':{'class':'form-control pass'}}) }}
        {{ form_errors(form.current_password,{'attr':{'class':'error'}}) }}
    </div>
    <div class="input">
         {{ form_label(form.plainPassword.first) }}
         {{ form_widget(form.plainPassword.first,{'attr':{'class':'form-control pass'}}) }}
         {{ form_errors(form.plainPassword.first,{'attr':{'class':'error'}}) }}
    </div>
    <div class="input">
        {{ form_label(form.plainPassword.second) }}
        {{ form_widget(form.plainPassword.second,{'attr':{'class':'form-control verpass'}}) }}
        {{ form_errors(form.plainPassword.second,{'attr':{'class':'error'}}) }}
    </div>
    <div>
        <input type="submit" class="btn btn-primary change" value="{{ 'Change password'|trans }}" />
    </div>
{{ form_end(form) }}
</div>
</div>